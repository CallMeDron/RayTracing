{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Tests",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/build/tests/Release/tests.exe",
            "cwd": "${workspaceFolder}/src/build",
            "console": "integratedTerminal",
            "preLaunchTask": "Build"
        },
        {
            "name": "Run Main",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/build/Release/main.exe",
            "cwd": "${workspaceFolder}/src/build",
            "console": "integratedTerminal",
            "preLaunchTask": "Build"
        },
        {
            "name": "Run Main (без сборки)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/build/Release/main.exe",
            "cwd": "${workspaceFolder}/src/build",
            "console": "integratedTerminal"
        }
    ]
}